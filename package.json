{
  "name": "md-board",
  "displayName": "Markdown Board",
  "version": "0.0.2",
  "publisher": "iketiunn",
  "description": "Visualize a folder of Markdown files as a Kanban board powered by frontmatter.",
  "author": {
    "name": "Ike Chang"
  },
  "categories": ["Visualization", "Notebooks"],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "pricing": "Free",
  "activationEvents": ["onCommand:extension.openFolderAsKanban"],
  "engines": {
    "vscode": "^1.109.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.openFolderAsKanban",
        "title": "Open Folder as Kanban Board"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.openFolderAsKanban",
          "when": "explorerResourceIsFolder",
          "group": "navigation@10"
        },
        {
          "command": "extension.openFolderAsKanban",
          "when": "explorerResourceIsRoot",
          "group": "navigation@10"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "gray-matter": "^4.0.3",
    "preact": "^10.28.3"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iketiunn/vscode-md-board/issues",
    "email": "ike.chang@sideeffect.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iketiunn/vscode-md-board.git"
  },
  "homepage": "https://github.com/iketiunn/vscode-md-board/blob/main/README.md"
}
